@model Reserva_B.Models.Pelicula

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Pelicula</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaDeLanzamiento" class="control-label"></label>
                <input asp-for="FechaDeLanzamiento" class="form-control" />
                <span asp-validation-for="FechaDeLanzamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-6">
                            <label asp-for="GeneroId" class="control-label"></label>
                            <select asp-for="GeneroId" class="form-control" asp-items="ViewBag.GeneroId"></select>
                            <a class="btn btn-link" type="submit" asp-area="" asp-controller="Generos" asp-action="Create">Agregar otro genero</a>
                        </div>
                    </div>

                </div>
            </div>
           

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" /> |
                <a asp-action="Index">Volver atrás</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
